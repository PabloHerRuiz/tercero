<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Formal!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href="/css/estilos.css">
        {% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% for post in alumnos %}

                {% if post.id == id %}
                    <p>{{post.id}}</p>
                    <p>{{post.nombre}}</p>
                    <p>{{post.apellido}}</p>
                    <p>{{post.curso}}</p>
                {% endif %}

             {% endfor %}
        
        <a href="{{path('listado')}}">Listado Alumnos</a>
        <a href="{{path('home')}}">Home</a>

        {% endblock %}
    </body>
</html>